<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:elevation="8dp"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:padding="8dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rec_fav"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_fav_simple"
            android:layout_marginHorizontal="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/colorPrimaryDark" />

        <ImageView
            android:id="@+id/rec_img"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/sign_in_bg"/>

        <TextView
            android:id="@+id/rec_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daal Chaval"
            android:layout_marginHorizontal="8dp"
            android:layout_toStartOf="@+id/rec_fav"
            android:layout_toEndOf="@+id/rec_img"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/rec_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="golu"
            android:layout_marginHorizontal="8dp"
            android:layout_toStartOf="@+id/rec_fav"
            android:layout_toEndOf="@+id/rec_img"
            android:layout_below="@+id/rec_name"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:padding="3dp"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>